{% extends "@App/base.html.twig" %}

{% block body %}
    <div id="page_title">
        <div class="container text-center">
            <div class="panel-heading">Thank You! Your Account is now Activated.</div>
            <ol class="breadcrumb">
                <li><a href="{{ path('homepage') }}">HOME</a></li>
                <li><a href="{{ path('app_registration_register') }}">SIGN UP</a></li>
                <li class="active">SUCCESS</li>
            </ol>
        </div>
    </div>
    <!--page_title Section End-->

    <!--page content Section Satrt-->
    <div id="about">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 about_l"> <img src="/bundles/app/images/about/desk.png"  alt="desk" /> </div>
                <div class="col-md-6 col-sm-6">
                    <p>{{ 'registration.confirmed'|trans({'%username%': user.username})|raw }}</p>
                    {% if targetUrl %}
                        <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans|raw }}</a></p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

